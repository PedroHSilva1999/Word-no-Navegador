@model DocumentoModel
@{
    ViewData["Title"] = "Editar documento";
}
<div class="container">
    <div class="col-md-12">
        <form asp-controller="Home" asp-action="Editar" method="post">
            <div asp-validation-summary="All" style="color:red">
                <input type="hidden" asp-for="ID"/>
                <div class="form-group mb-3">
                    <input type="text" class="form-control" asp-for="Titulo" />
                </div>

                <div class="form-group mb-3">
                    <textarea class="form-control" asp-for="Conteudo" style="width:68vw; height:68vh"></textarea>
                </div>

                <input class="btn btn-primary w-100" type="submit" />
                <button class="w-100 btn btn-danger"  asp-controller="Home" asp-action="Excluir">Remover</button>
                <button class="btn btn-secondary w-100" asp-controller="Home" asp-action="Index">Voltar</button>
            </div>
        </form>
    </div>
</div>